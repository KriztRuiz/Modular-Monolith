{
    "name": "modular-monolith-ts",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
        "start": "node dist/server.js",
        "db:up": "docker run -d --name mongo -p 27017:27017 -v ./data/mongo:/data/db mongo:7",
        "db:down": "docker rm -f mongo",
        "db:logs": "docker logs -f mongo",
    "test:e2e": "mocha --loader ts-node/esm \"tests/**/*.test.ts\"",
        "test": "npm run test:e2e",
        "scan:semgrep": "semgrep --config security/semgrep/nosql-injection.yml --quiet"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.21.2",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.18.1",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/chai": "^5.2.2",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.23",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.18.5",
        "@types/supertest": "^6.0.3",
        "chai": "^6.0.1",
        "mocha": "^11.7.2",
        "supertest": "^7.1.4",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    },
    "main": "index.js",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": ""
}
